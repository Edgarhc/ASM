<?xml version="1.0" encoding="utf-8"?>
<code-style>
	<!--
		the base theme. You should make this or use tag <import-default/>.
		This is light theme.
		if you want to include other file, use include.
		like: <include path="code-style/mystyle.xml"/>.
		you should write in path, the all path off asset.
	-->
	<language lang="base">
		<preference name="foreground" type="color">#000000</preference>
		<color name="foreground">@pref/foreground</color>
		<color name="background">#00000000</color>
		<color name="number">#09aa88</color>
		<color name="operator">#0999ee</color>
		<color name="math">#10bb10</color>
		<color name="textQuote">#a06600</color>
		<!-- not only text quotes like " ; for avoid understand it to just plain text -->
		<color name="keyword">#0911aa</color>
		<color name="note">#55ff55</color>
		<color name="otherData">#a06600</color>
		<color name="type">#20a1f7</color>
	</language>
	<language lang="java">
		<preference name="text" type="color">#000000</preference>
		<color name="class">@pref/class</color>
		<color name="packageName">#888888</color>
		<color name="javadoc">#66ff7a</color>
		<color name="annotation">#aa66bb</color>
	</language>
</code-style>
